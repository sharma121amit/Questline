<div class="panel panel-default post-panel post-form-panel">
    <div class="panel-body row">
      <div class="col-sm-1">
        <img src="/Dolly.png" class="rounded-img" height="50px" width="50px"></img>
      </div>
      <div class="col-sm-11">
        <%= form_for(@newPost) do |f| %>
          <div class="field" style="margin-left: 10px">
          <%= f.text_field :content, autofocus: true, class: "form-control" %>
          <span type="button" class="btn btn-submit" style="float: right"><%= f.submit "Send Quest", class: "btn btn-primary" %></span>
          </div>
        <% end %>
      </div>
    </div>
</div>


