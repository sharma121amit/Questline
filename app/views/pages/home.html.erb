<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>stats</p>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>trend</p>
            </div>
        </div>
    </div>
     <div class="col-xs-6">
        <%= render '/Components/post_form'%><br><br>
        
        <% for @p in @posts %>
        <div class="panel panel-default post-panel">
            <div class="panel-body row">
                <div class="col-sm-1">
                    <img src="/Dolly.png" class="rounded-img" height="50px" width="50px"></img>
                </div>
                <div class="col-sm-11">
                    <p class="post-title"><spam class="post-owner"><%=User.find(@p.user_id).username %></spam><spam class="post-creation"> - <%=@p.created_at.to_formatted_s(:short) %></spam></p>
                    <p class="post-content"><%= @p.content %></p>
                </div>
                <div class="col-sm-12">
                    <p class="post-links">
                        <span class="glyphicon glyphicon-star g-links" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                        <a href=""> View Conversation </a>
                    </p> 
                </div>
                
            </div>
        </div>
        <% end %>
        
        <div class="panel panel-default post-panel">
            <div class="panel-body row">
                <div class="col-sm-12">
                <center> <a href="top"><p class="opacity: 0.7">Back to Top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
                </div>
            </div>
        </div>
        
    </div>
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>about</p>
            </div>
        </div>
    </div>
</div>

